<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>ServletsAndJsp</display-name>
  
  <servlet>
  	<servlet-name>CounterServlet</servlet-name>
  	<servlet-class>servlets.CounterServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>GetPostServlet</servlet-name>
  	<servlet-class>servlets.GetPostServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>CounterServlet</servlet-name>
  	<url-pattern>/counter</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>GetPostServlet</servlet-name>
  	<url-pattern>/getpost</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
  	<welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
</web-app>
